{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2019",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "esModuleInterop": true,
    "baseUrl": "./",
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "webpack",
    "config"
  ],
  "types": [
    "typePatches"
  ],
  "include": [
    "**/*.ts"
  ],
  "paths": {
    "@components/*": [
      "src/components/*"
    ],
    "@store/*": [
      "src/store/*"
    ],
    "@containers/*": [
      "src/containers/*"
    ],
    "@utils/*": [
      "src/utils/*"
    ],
    "@scss/*": [
      "src/scss/*"
    ],
    "@/*": [
      "src/*"
    ]
  }
}